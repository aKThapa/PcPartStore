<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <link rel="stylesheet" type="text/css" href="~/Content/myStyle.css">
    <link href="https://fonts.googleapis.com/css?family=Kumar+One" rel="stylesheet">
</head>
<body class="@ViewBag.BodyClass">

    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">

            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("PCpartStore", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li class="btn-primary">@Html.ActionLink("CPU", "Index", "Home")</li>
                    <li class="btn-primary">@Html.ActionLink("GPU", "IndexNvidia", "NvidiaGpu")</li>
                    @*<li class="btn-primary">@Html.ActionLink("Contact", "Contact", "Home")</li>*@
                    <li class="btn-primary">@Html.ActionLink("Memory", "IndexMemory", "Memory")</li>
                    <li class="btn-primary">@Html.ActionLink("Power", "IndexPSU", "PSU")</li>
                    <li class="btn-primary">@Html.ActionLink("Cooler", "IndexCooler", "Cooler")</li>
                </ul>
           
            </div>
            
            @*<div class="navbar-right">
                @Html.ActionLink("Summary", "Summary", "ProductSummary", null, new { @class = "btn btn-default" })
            </div>
            <div class="navbar-text navbar-right">
                Your cart: 0 item(s), £0.00
                
            </div>*@

            @Html.Action("Info" , "NavbarInfo")
        </div>
    </div>

    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - PCpartStore</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
