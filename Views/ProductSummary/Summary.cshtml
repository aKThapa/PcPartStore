@model IEnumerable<PCpartStore.Models.Parts>
@{
    ViewBag.Title = "Summary";
}


<h2 class="brandName">Summary</h2>
<table class="table">
    <tr>
        <th>@Html.DisplayNameFor(model => model.Name)</th>
        <th>@Html.DisplayNameFor(model => model.Price)</th>
        <th>#</th>
    </tr>

    @foreach (var i in Model)
    {
        <tr>
            <td>@Html.DisplayFor(model => i.Name)</td>
            <td>@Html.DisplayFor(model => i.Price)</td>
            <td>
                @using (Html.BeginForm("Delete", "ProductSummary", new { ID = i.ID }))
                {
                    @*@Html.HiddenFor(model => i.Id)*@
                    <input type="submit" class="btn btn-primary" value="Remove" />
                }
            </td>
        </tr>
    }
    <tr>
        <td class="whiteText">TOTAL   :   </td>
        <td class="whiteText">@ViewBag.Total</td>
        <td></td>
    </tr>
</table>

@using (Html.BeginForm("CheckoutNow", "Checkout"))
{
    <input type="submit" class="btn btn-primary" value="Checkout Now "/>
}


